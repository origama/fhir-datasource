{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "rootDir": "./src",
    "lib": ["dom", "es2019"],
    "jsx": "react-jsx",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "moduleResolution": "node"
  },
  "exclude": ["specs"]
}
